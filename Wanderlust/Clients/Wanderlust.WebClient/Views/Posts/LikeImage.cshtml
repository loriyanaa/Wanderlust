@model Wanderlust.WebClient.Models.LikeImageModelView
@{
    ViewBag.Title = "LikeImage";
}

<div class="likes-comments" id="@Model.ImageToLike.Id">
    <div class="likes"> @Model.ImageToLike.LikesCount likes</div>
    @if (!string.IsNullOrEmpty(Model.ImageToLike.Description))
    {
        <div class="comment">
            <strong>@Model.ImageToLike.Uploader.Username  </strong><span class="comment-content"> @Model.ImageToLike.Description </span>
        </div>
    }

    @foreach (var comment in @Model.ImageToLike.Comments)
    {
        <div class="comment">
            <strong>@comment.Author.Username  </strong><span class="comment-content"> @comment.Content </span>
        </div>
    }
    <hr />
    @if (Model.AlreadyLikedImages.Contains(Model.ImageToLike))
    {
        <button class="btn btn-like" name="likeImg" value="Dislike"><i class="icon fa-heart"> Dislike</i></button>
    }
    else
    {
        <button class="btn btn-like" name="likeImg" value="Like"><i class="icon fa-heart-o"> Like</i></button>
    }
</div>



     

  

