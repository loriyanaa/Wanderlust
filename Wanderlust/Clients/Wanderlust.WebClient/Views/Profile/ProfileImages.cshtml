@using (Ajax.BeginForm("GetProfileImages", "Profile",
                                                     new AjaxOptions
                                                     {
                                                         HttpMethod = "GET",
                                                         UpdateTargetId = "gallery",
                                                         InsertionMode = InsertionMode.InsertAfter
                                                     }))
{
    <div class="container gallery">
        <div id="gallery" class="flex">
            @foreach (var image in Model.UploadedImages)
            {
                <figure class="gallery-item">
                    <figcaption class="overlay">London, United Kingdom</figcaption><a href="http://externallinkgoeshere.co.uk" target="_blank"><img src="@image.ThumbnailSrc" class="image-gallery" alt=""></a>
                    <div class="image-stats"><i class="icon fa-heart"> @image.LikesCount</i> <i class="icon fa-comment"> @image.Comments.Count</i></div>
                </figure>
            }
        </div>
        <div class="show-more">
            <input class="btn show-more-btn" type="submit" value="SHOW MORE" />
        </div>
    </div>
}

